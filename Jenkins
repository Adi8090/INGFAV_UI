pipeline {
   agent any
	stages {
      stage('SCM Checkout') {
         steps {
            git 'https://github.com/atulrockzz/INGFAV_UI.git'
		}
	}
	stage('Build') {
		steps {
			sh '''
			npm install
			npm run build
			npm audit fix
			'''
		}
	}
	stage ('Deploy') {
		steps {
			sh '''
             sudo cp -r $WORKSPACE/build /opt/apache-tomcat-9.0.30/webapps
             curl -u admin:admin http://18.188.84.171:8888/manager/reload?path=/build 
             '''
		}
	}
}
}
