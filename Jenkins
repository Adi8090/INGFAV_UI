pipeline {
   agent any
	stages {
      stage('SCM Checkout') {
         steps {
            git 'https://github.com/atulrockzz/INGFAV_UI.git'
		}
	}
	stage('Build') {
		steps {
			sh '''
			npm install
			npm update
			npm audit fix
			npm run build
			'''
		}
	}
	stage ('Deploy') {
		steps {
			sh '''
             cp -r $WORKSPACE/build /opt/apache-tomcat-10.0.13/webapps
             curl -u admin:admin http://13.126.112.204:8888/manager/reload?path=/build 
             '''
		}
	}
}
}
